<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.yoursite.basicparticle"
    version     = "1.03.06" >      <!-- Change this before each compile -->

  <name>Photon-Web-App</name>
  <description>
      An example for phonegap build docs.
  </description>
  
  <author href="https://yoursite.com" email="you@gmail.com">
      yourName
  </author>
  
  
 <!--   <gap:plugin name="cordova-plugin-whitelist" source="npm"/> --> <!-- Yes this is needed -->
  <plugin name="cordova-plugin-whitelist" spec="1.3.2" />
  
  <!-- all platforms -->
    
  <preference name='phonegap-version' value='cli-7.0.1' />
  <preference name='pgb-builder-version' value='2' />   
    

 <!--  older versions that worked
  <preference name="phonegap-version" value="cli-6.5.0" />  
  <preference name="phonegap-version" value="3.7.0" />
  <preference name="phonegap-version" value="cli-6.3.0" />  
  <preference name="phonegap-version" value="cli-5.4.1" />  
 -->
 
  <preference name="orientation" value="default" />
  <preference name="fullscreen" value="true" />



  <!-- Android only -->

  <preference name="android-installLocation" value="auto" />
  
  
  <!-- Android SDK versions 4.0=14  4.4=19,    5.1=22,  6.0=23,   7.0=24  -->
  
  
</widget>
